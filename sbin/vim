#!/sbin/sh
# vim: set up and run vim from recovery/terminal
# osm0sis @ xda-developers

mount /data 2>/dev/null;
mount /cache 2>/dev/null;
test -e /data/adb/magisk && adb=adb;
suimg=`(ls /data/su.img || ls /cache/su.img || ls /data/$adb/magisk.img || ls /cache/magisk.img) 2>/dev/null`;
if [ "$suimg" ]; then
  mnt=/$(basename $suimg .img);
  umount $mnt 2>/dev/null;
  test ! -e $mnt && mkdir -p $mnt;
  mount -t ext4 -o rw,noatime $suimg $mnt 2>/dev/null;
  if [ $? != 0 ]; then
    test -e /dev/block/loop1 && minorx=$(ls -l /dev/block/loop1 | cut -d, -f2 | cut -c4) || minorx=1;
    i=0;
    while [ $i -lt 16 ]; do
      loop=/dev/block/loop$i;
      if [ ! -b $loop ]; then
        mknod $loop b 7 $((i * minorx));
      fi;
      losetup $loop $suimg 2>/dev/null && break;
      i=$((i + 1));
    done;
    mount -t ext4 -o loop,noatime $loop $mnt 2>/dev/null;
    if [ $? != 0 ]; then
      losetup -d $loop 2>/dev/null;
    fi;
  fi;
  test $mnt == /magisk && magisk=/vim-ndk/system;
  etc=$mnt$magisk/etc;
  bin=$mnt$magisk/bin;
else
  mnt=$(dirname `find /data -name supersu_is_here | head -n1`);
  test -e /data/adb/modules && mnt=/data/adb/modules/vim-ndk/system;
  test -e /data/adb/modules_update && mnt=/data/adb/modules_update/vim-ndk/system;
  if [ -e "$mnt" ]; then
    etc=$mnt/etc;
    bin=$mnt/bin;
  else
    mount -o ro /system 2>/dev/null;
    test -f /system/system/build.prop && root=/system;
    etc=$root/system/etc;
    bin=$root/system/xbin;
  fi;
fi;

if [ "$1" == "--term" ]; then
  term=$2;
  shift 2;
else
  term=pcansi;
fi;

clear;
TERMINFO=$etc/terminfo TERM=$term $bin/vim.bin "$@";

